<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Basic Style classes  -->
    <style name="Theme.Talkies.Text" />

    <style name="Theme.Talkies.Button" />

    <style name="Theme.Talkies.BottomSheet" />

    <style name="Theme.Talkies.Toolbar" />

    <!--  Text Styles  -->
    <style name="Theme.Talkies.Text.Title">
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Talkies.Text.Title.Huge">
        <item name="android:textSize">@dimen/font_70</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Talkies.Text.Title.Huge.Light">
        <item name="android:textSize">@dimen/font_70</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Theme.Talkies.Text.Title1">
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Talkies.Text.Heading">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Theme.Talkies.Text.Content">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Theme.Talkies.Text.Content.Light">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!--  Button Styles  -->
    <style name="Theme.Talkies.Button.Solid">
        <item name="cornerRadius">@dimen/dimen_5</item>
    </style>
</resources>
